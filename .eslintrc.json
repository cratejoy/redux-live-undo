{
  "plugins": [],
  "extends": ["eslint:recommended"],
  "env": {
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "modules": true
    }
  },
  "rules": {
    "indent": [2, "tab"],
    "no-console": [0],
    "no-unused-vars": [1]
  }
}
